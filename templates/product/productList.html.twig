{% extends 'base.html.twig' %}

{% block title %}List Product{% endblock %}

{% block body %}
    <div class="container my-4">
    <div class="table-responsive" style="overflow-x: auto">
        <div class="my-table">
            <table class="table table-striped table-hover dataTable-product dt-responsive dataTable row-border"
                   id="DataTables_Table_0" aria-describedby="DataTables_Table_0_info" role="grid"
                   style="width: 100%">
                <thead class="thead-dark">
                <tr role="row">
                    <th class="sorting text-capitalize" tabindex="0"
                        aria-controls="DataTables_Table_0"
                        rowspan="1" colspan="1"
                        aria-label="Browser: activate to sort column ascending"
                        style="width: 261px;">
                        ID
                    </th>
                    <th class="sorting text-capitalize" tabindex="0"
                        aria-controls="DataTables_Table_0"
                        rowspan="1" colspan="1"
                        aria-label="Browser: activate to sort column ascending"
                        style="width: 261px;">
                        Name
                    </th>
                    <th class="text-capitalize" tabindex="0"
                        aria-controls="DataTables_Table_0"
                        rowspan="1" colspan="1"
                        aria-label="CSS grade: activate to sort column ascending"
                        style="width: 261px;">
                        Price
                    </th>
                </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
    </div>
{% endblock %}
{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('listProduct') }}
{% endblock %}
